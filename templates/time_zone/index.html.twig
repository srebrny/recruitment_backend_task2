{% extends 'base.html.twig' %}

{% block title %}Hello TimeZoneController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>

        {{ form(form) }}

        {% if input_timezone %}
            The time zone {{ input_timezone }} has {{ timeZoneOffset }} minutes offset to UTC on the given day at noon.<br/>
            February in this year is {{ numberOfDaysInFebruary}} days long.<br/>
            The specified month {{ fullCurrentMonthName}} is {{ numDaysOfCurrentMonth }} days long.
        {% endif %}

    </div>
{% endblock %}
